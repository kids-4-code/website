<body>

  <h1>Past Officers & Alumni</h1>

  <div class="section" id="past-officers">
    <h2>Past Officers</h2>
  </div>

  <div class="section" id="alumni">
    <h2>Where They Are Now</h2>
  </div>

  <script>
    const pastOfficers = [
      { name: "Ishaan Samantray", role: "Former President" },
      { name: "Tyler Song", role: "Former Vice President" }
    ];

    const alumni = [
      { name: "Hongjin", destination: "Cornell – Bioengineering" },
      { name: "Tyler He", destination: "UMD – CS Honors College" },
      { name: "Ishaan Samantray", destination: "Cornell – Bioengineering" }
    ];

    const officerSection = document.getElementById('past-officers');
    pastOfficers.forEach(officer => {
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `<div class="name">${officer.name}</div><div class="role">${officer.role}</div>`;
      officerSection.appendChild(card);
    });

    const alumniSection = document.getElementById('alumni');
    alumni.forEach(alum => {
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `<div class="name">${alum.name}</div><div class="destination">${alum.destination}</div>`;
      alumniSection.appendChild(card);
    });
  </script>

